  <script>
    $(document).ready(function () {
      const geoAPI = "https://api.ipgeolocation.io/ipgeo?apiKey=1cf5225c7f9c4cdf811cba5cb070561f";
      $.getJSON(geoAPI, function (data) {
        if (data) {
          const city = data.city;
          const country = data.country_name;
          const locationMsg = `${city}, ${country}`;
          const outcomeMsg = `Next month I may be casting live rituals in ${city} ✨ Want in?`;
          $('#locationMessage').text(locationMsg);
          $('#outcomeMessage').text(outcomeMsg);
        }
      });

      const imagesContainer = document.querySelector(".images");
      const images = document.querySelectorAll(".images img");
      const total = images.length;
      let index = 0;

      setInterval(() => {
        index = (index + 1) % total;
        imagesContainer.style.transform = `translateX(-${index * 600}px)`;
      }, 3000);
    });
  </script>
